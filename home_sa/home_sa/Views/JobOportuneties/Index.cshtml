@model IEnumerable<JobOpportunity>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.employerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.jobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.jobDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.employerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.jobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.jobDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.jobId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.jobId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.jobId">Delete</a> |
                    <a asp-action="Reply" asp-route-id="@item.jobId">Reply</a>
            </td>
        </tr>
}
    </tbody>
</table>
